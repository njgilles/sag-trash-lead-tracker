rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Require authentication for all lead operations
    match /leads/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Require authentication for all contract operations
    match /contracts/{document=**} {
      allow read, write: if request.auth != null;
    }

    // Email templates - allow authenticated users to read and write
    // Prevent deletion of system templates (isSystem: true)
    match /email_templates/{document=**} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null;
      allow delete: if request.auth != null && resource.data.isSystem != true;
    }
  }
}
